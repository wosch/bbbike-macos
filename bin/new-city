#!/usr/bin/perl

$a = '
# bbbike @ %s
%s: %s-download %s-convert
%s-download:
	mkdir -p ${OSM_DIR}/%s
	${DOWNLOADOSM} -o ${OSM_DIR}/%s -- 8.4483 47.3437 8.6271 47.4185
%s-convert:
	${OSM2BBD} -centerdelta 8.41,47.25 -o ${DATA_OSM_DIR}/%s ${OSM_DIR}/%s

';

foreach my $C (@ARGV) {
	my $c = $C;

  	printf("$a", $C, 
		$c, $c, $c, $c,
		$C, $C,
		$c, $C, $C);
}


