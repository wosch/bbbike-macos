#!/usr/local/bin/perl

use HTML::TagCloud;
use strict;
use warnings;

my $cloud = HTML::TagCloud->new(levels=>16);

my $ext = '.cgi';

while(<>) {
	chomp;
	
	my ($city, $population) = split(/\s+/);

	$population = 1 if $population <= 0;

	$cloud->add( $city, "cgi/$city$ext", $population);
}

print $cloud->html_and_css;

