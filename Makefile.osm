scp:
	scp ${OSMBIKE_DATA} wolfram.schneider.org:www/src

clean:
	rm -rf data-osm
	mkdir data-osm

dist-clean devel-clean distclean: clean
	rm -rf osm
	mkdir -p osm

help:
	@echo "usage: make [ help | cities | convert | scp | clean | dist-clean ]"
	@echo "usage: make [ ${CITIES} ]"

